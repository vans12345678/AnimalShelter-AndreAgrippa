@model AnimalShelter_AndreAgrippa.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment -";
}

<h1 class="title-color">Delete</h1>

<h3 class="title-color">Are you sure you want to delete this?</h3>
<body class="bg-dark">
    <div>
        <h4>Appointment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.animal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.animal.animalID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.owner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.owner.ownerID)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="appointmentID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</body>