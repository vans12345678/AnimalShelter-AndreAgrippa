@model AnimalShelter_AndreAgrippa.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment -";
}

<h1 class="title-color">Create</h1>

<h4 class="title-color">Appointment</h4>
<hr />
<body class="bg-dark">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="date" class="control-label title-color">Date</label>
                    <input asp-for="date" class="form-control" required="required" />
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="animalID" class="control-label title-color">Animal ID</label>
                    <select asp-for="animalID" class="form-control" asp-items="ViewBag.animalID" required="required"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ownerID" class="control-label title-color">Owner ID</label>
                    <select asp-for="ownerID" class="form-control" asp-items="ViewBag.ownerID" required="required"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>